<body>

    <div class="main-container" id="container">


        <div id="content" class="main-content">



            <div class="row layout-spacing">
                <div class="col-lg-12">
                    <div class="statbox widget box box-shadow">
                        <div class="box-header" data-original-title="">
                            <h2><i class="icon-user-md"></i><span class="break"></span>Providers</h2>
                            <div class="box-icon">
                                <a @*onclick="openform()"*@data-toggle="modal" data-target="#exampleModal" class="btn-link"><i class="icon-plus-sign"></i></a>
                            </div>
                        </div>
                        <div class="widget-content widget-content-area">
                            <div class="table-responsive mb-4 style-1" style="border-radius: 8px; border: 2px solid;">
                                <table id="customer-info-detail-1" class="table style-1  table-bordered table-hover">
                                    <thead data-orderable="false">
                                        <tr data-orderable="false">

                                            <th data-orderable="false" class="checkbox-column">ID</th>
                                            <th data-orderable="false">Provider ID</th>
                                            <th data-orderable="false">Provider Name</th>
                                            <th data-orderable="false">Auth Code</th>
                                            <th data-orderable="false">Number Of Leads</th>
                                            <th data-orderable="false">Edit</th>


                                        </tr>
                                    </thead>
                                    <tbody>



                                        @foreach (var i in ViewBag.vendor)
                                        {



                                        <tr>
                                            <td class="checkbox-column"> </td>
                                            <td> @i.Id </td>
                                            <td class="customer-name-1">
                                                <div class="d-flex">
                                                    <div class=" align-self-center d-m-success  mr-1 data-marker"></div>
                                                    <span class="label label-success">@i.Name</span>
                                                </div>
                                            </td>


                                            <td>@i.auth_key</td>
                                            <td>
                                               5
                                            </td>
                                            <td>

                                                <span class="label">
                                                        <a class="btn btn-info" href="/Home/edit_provider?providerid=@i.Id" title="" data-rel="tooltip" data-original-title="Edit this vendor"><i class="icon-edit "></i></a>
                                                    <!--<a class="btn btn-danger" href="business_logic/execute.php?task=rmvendor&vendorid=1" onclick="return confirm('Are you sure you want to delete this vendor?');" title="Delete this campaign" data-rel="tooltip">
        <i class="icon-trash "></i>
    </a>-->
                                                        <a class="btn btn-danger" href="/Home/delete_provider?providerid=@i.Id" title="" data-rel="tooltip" data-original-title="Delete this Provider">
                                                            <i class="icon-trash "></i>
                                                        </a>
                                                   @* <a class="btn btn-info" href="../sources.php?vendor=1" title="" data-rel="tooltip" data-original-title="View sources"><i class="icon-cloud-download "></i></a>*@
                                                </span>
                                            </td>


                                        </tr>
                                        }


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </div>
        <!--  END CONTENT PART  -->
    </div>


    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">  </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="" class="span12">
                        
                      
                       <form class="form-horizontal" action="/Home/addprovider" style="display:inline;" method="post" enctype="multipart/form-data">
                        @*<form class="form-horizontal" action="/api/Values" style="display:inline;" method="post" enctype="multipart/form-data">*@
                            <fieldset>
                               
                                <div class="row-fluid ">
                                    <div class="box span4" style="min-width:500px">
                                        <div class="box-header">
                                            <h2><i class="icon-edit"></i>Provider Information</h2>
                                            <div class="box-icon">
                                                <a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
                                            </div>
                                        </div>
                                        <div class="box-content">
                                          
                                            <div class="control-group">
                                                <label class="control-label" for="vendor:vendor_name">Provider Name</label>
                                                <div class="controls"><input type="text" class="input-large" name="vendorname" id="vendor:vendor_name" value=""></div>
                                            </div><div class="control-group">
                                                <label class="control-label" for="vendor:address1">Address</label>
                                                <div class="controls"><input type="text" class="input-large" name="address" id="vendor:address1" value=""></div>
                                            </div><div class="control-group">
                                                <label class="control-label" for="vendor:state">State</label>
                                                <div class="controls"><select name="state" id="selectvendor:state"><option value="" selected=""></option><option value="AL">AL</option><option value="AK">AK</option><option value="AZ">AZ</option><option value="AR">AR</option><option value="CA">CA</option><option value="CO">CO</option><option value="CT">CT</option><option value="DE">DE</option><option value="DC">DC</option><option value="FL">FL</option><option value="GA">GA</option><option value="HI">HI</option><option value="ID">ID</option><option value="IL">IL</option><option value="IN">IN</option><option value="IA">IA</option><option value="KS">KS</option><option value="KY">KY</option><option value="LA">LA</option><option value="ME">ME</option><option value="MD">MD</option><option value="MA">MA</option><option value="MI">MI</option><option value="MN">MN</option><option value="MS">MS</option><option value="MO">MO</option><option value="MT">MT</option><option value="NE">NE</option><option value="NJ">NJ</option><option value="NV">NV</option><option value="NM">NM</option><option value="NY">NY</option><option value="NC">NC</option><option value="ND">ND</option><option value="OH">OH</option><option value="OK">OK</option><option value="OR">OR</option><option value="PA">PA</option><option value="RI">RI</option><option value="SC">SC</option><option value="SD">SD</option><option value="TN">TN</option><option value="TX">TX</option><option value="UT">UT</option><option value="VT">VT</option><option value="VA">VA</option><option value="WA">WA</option><option value="WV">WV</option><option value="WI">WI</option><option value="WY">WY</option></select></div>
                                            </div><div class="control-group">
                                                <label class="control-label" for="zip">Zip</label>
                                                <div class="controls"><input type="text" class="input-large" name="zip" id="vendor:zip" value=""></div>
                                            </div><div class="control-group">
                                                <label class="control-label" for="phone">Phone</label>
                                                <div class="controls"><input type="text" class="input-large" name="phone" id="vendor:phone1" value=""></div>
                                            </div>
                                            <div class="control-group">
                                                <label class="control-label" for="vendor:email">Email</label>
                                                <div class="controls"><input type="text" class="input-large" name="email" id="vendor:email" value=""></div>
                                            </div><div class="control-group">
                                                <label class="control-label" for="vendor:contact">Contact</label>
                                                <div class="controls"><input type="text" class="input-large" name="contact" id="vendor:contact" value=""></div>
                                            </div><div class="control-group">
                                                <label class="control-label" for="vendor:notes">Notes</label>
                                                <div class="controls"><input type="text" class="input-large" name="notes" id="vendor:notes" value=""></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>                            <button type="submit" class="btn btn-primary">Save changes</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
               
            </div>
        </div>
    </div>


    <!--  END CONTROL SIDEBAR  -->
